<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4024.15">
  <POU Name="FNB_Door_logic" Id="{9721a28e-2319-414d-aa0c-be057b189e9b}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK PUBLIC FNB_Door_logic
VAR_INPUT
	Buttons : ARRAY[0..10] OF  BOOL;
	Callup : ARRAY[1..10] OF  BOOL;
	Calldown : ARRAY[0..9] OF  BOOL;
	Dooropen : BOOL;
END_VAR
VAR_OUTPUT
	Buttonpressed : BOOL;
	Buttonup : BOOL;
	Buttondown : BOOL;
	calldownlevel : INT;
	calluplevel : INT;
	DoorMotorOpen : BOOL;
	DoorMotorClose : BOOL;
	level : INT;
	cabinlevel : INT;
END_VAR
VAR
	i : INT;
	Timer : Ton;
	PT : TIME := T#10S;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[(*ajtók kezelése*)

FOR i := 0 TO 10 DO
	IF  Buttons[i] THEN
		Buttonpressed := TRUE;
		cabinlevel := i;
		EXIT;
	END_IF
END_FOR

FOR i := 0 TO 9 DO
	IF  Calldown[i] THEN
		Buttondown := TRUE;
		calldownlevel :=i;
		EXIT;
	END_IF
END_FOR

FOR i := 1 TO 10 DO
	IF  Callup[i] THEN
		Buttonup := TRUE;
		calluplevel:= i;
		EXIT;
	END_IF
END_FOR


IF NOT Buttonpressed AND NOT Buttonup AND NOT Buttondown THEN
	DoorMotorOpen:= TRUE;
	Timer(IN:=FALSE);

	ELSIF Buttonpressed AND Dooropen THEN
		DoorMotorClose := TRUE;
		Timer(IN:=TRUE);

	ELSIF NOT Buttonpressed AND Buttonup THEN
		IF calldownlevel < level THEN
			Timer(IN := TRUE);
		END_IF

	ELSIF NOT Buttonpressed AND Buttondown THEN
		IF calluplevel > level THEN
			Timer(IN := TRUE);
		END_IF

		IF Timer.Q THEN
		 DoorMotorClose := TRUE;
		 END_IF
	END_IF



]]></ST>
    </Implementation>
    <LineIds Name="FNB_Door_logic">
      <LineId Id="10" Count="51" />
      <LineId Id="9" Count="0" />
    </LineIds>
  </POU>
</TcPlcObject>
